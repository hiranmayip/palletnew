<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hitesh_sahu.retailapp.view.fragment.RegistrationFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Register!"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#4CAF50"
            android:id="@+id/registerText"/>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/register_username"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="username"
            android:layout_below="@+id/registerText"/>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/register_email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_username"
            android:layout_marginTop="20dp"
            android:hint="email" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/register_mobile"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_email"
            android:layout_marginTop="20dp"
            android:hint="mobile number" />

<!--        <android.support.design.widget.TextInputEditText-->
<!--            android:id="@+id/register_Dob"-->
<!--            android:layout_width="300dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_below="@+id/register_mobile"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:hint="DOB" />-->

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_mobile"/>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/register_Adress"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_Dob"
            android:layout_marginTop="20dp"
            android:hint="Address" />

        <EditText
            android:id="@+id/register_CurrentPassword"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_Adress"
            android:layout_marginTop="20dp"
            android:hint="password"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/regButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_CurrentPassword"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:text="register" />


    </RelativeLayout>

</RelativeLayout>
